@model IEnumerable<BTL_CNPM.Models.Product>
@{
    ViewBag.Title = "Index";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
<head>
    <style>
        .card {
            width: 250px;
            border-radius: 5px;
            padding: 10px;
            /*top left right bot color*/
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s
        }

            .card:hover {
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.5);
            }

        img {
            border-radius: 5px 5px 0 0;
        }

        #magincard {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 20px
        }
    </style>
</head>
<h2>Order Food</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3" id="magincard">
                <div class="card">
                    @Html.DisplayFor(model => item.ProName)
                    <img src="@Url.Content(item.Pro_Image)" style="height:200px;width:200px;margin:10px" />
                    Price:@Html.DisplayFor(model => item.Pro_Price)
                    <br />
                    <a href="/ShopingCart/Addtocart/@item.IDPro">
                        <img src="@Url.Content("~/Content/Image/Cart1.png")" style="width:50px;height:40px" />
                    </a>
                </div> 
            </div>
        }
    </div>
</div>